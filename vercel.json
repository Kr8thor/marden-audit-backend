{
  "version": 2,
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGINS": "https://audit.mardenseo.com"
  },
  "functions": {
    "api_new/*.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api_new/audit/*.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api_new/job/*.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api_new/job/[id]/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/index",
      "dest": "/api_new/index.js"
    },
    {
      "src": "/api/health",
      "dest": "/api_new/health.js"
    },
    {
      "src": "/api/worker",
      "dest": "/api_new/worker.js"
    },
    {
      "src": "/api/audit/site",
      "dest": "/api_new/audit/site.js"
    },
    {
      "src": "/api/audit/page",
      "dest": "/api_new/audit/page.js"
    },
    {
      "src": "/api/job/([^/]+)$",
      "dest": "/api_new/job/[id].js?id=$1"
    },
    {
      "src": "/api/job/([^/]+)/results",
      "dest": "/api_new/job/[id]/results.js?id=$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "0 0 * * *"
    }
  ]
}